<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- AccountSummaryFee Table -->
    <changeSet author="redDot" id="2" context="postgresql, oracle">
        <createSequence sequenceName="account_summary_fee_id_seq" startValue="1" incrementBy="1"/>
        <createTable tableName="account_summary_fee">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="voice_flag" type="VARCHAR(50)"/>
            <column name="desc" type="VARCHAR(255)"/>
            <column name="number" type="VARCHAR(50)"/>
            <column name="duration" type="VARCHAR(50)"/>
            <column name="chg_fee" type="VARCHAR(50)"/>
            <column name="currency" type="VARCHAR(50)"/>
            <column name="processed" type="BOOLEAN" defaultValue="FALSE"/>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>
   </changeSet>

</databaseChangeLog>
