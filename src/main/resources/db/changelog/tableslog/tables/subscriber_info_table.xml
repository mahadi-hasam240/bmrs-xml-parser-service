<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- SubscriberInfo Table -->
    <changeSet author="redDot" id="2" context="postgresql, oracle">
        <createSequence sequenceName="subscriber_info_id_seq" startValue="1" incrementBy="1"/>
        <createTable tableName="subscriber_info">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="msisdn" type="VARCHAR(20)"/>
            <column name="sub_id" type="VARCHAR(50)"/>
            <column name="acct_code" type="VARCHAR(50)"/>
            <column name="sub_name" type="BIGINT"/>
            <column name="subs_sum_fee_id" type="BIGINT"/>
            <column name="detail_charge_container_id" type="BIGINT"/>
        </createTable>
   </changeSet>

</databaseChangeLog>
