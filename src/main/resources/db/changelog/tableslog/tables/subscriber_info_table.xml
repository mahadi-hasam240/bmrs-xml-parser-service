<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="redDot" id="subscriber-info-1">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="subscriber_info"/>
            </not>
            <not>
                <sequenceExists sequenceName="subscriber_info_id_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="subscriber_info_id_seq" startValue="1" incrementBy="1"/>
        <createTable tableName="subscriber_info">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="msisdn" type="VARCHAR(255)"/>
            <column name="sub_id" type="VARCHAR(255)"/>
            <column name="acct_code" type="VARCHAR(255)"/>
            <column name="sub_name_id" type="BIGINT"/>
            <column name="detail_charge_container_id" type="BIGINT"/>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="processed" type="BOOLEAN" defaultValueBoolean="false"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="subscriber_info"
                                 baseColumnNames="sub_name_id"
                                 referencedTableName="name"
                                 referencedColumnNames="id"
                                 constraintName="fk_subscriber_info_sub_name"/>

        <addForeignKeyConstraint baseTableName="subscriber_info"
                                 baseColumnNames="detail_charge_container_id"
                                 referencedTableName="detail_charge_container"
                                 referencedColumnNames="id"
                                 constraintName="fk_subscriber_info_detail_charge_container"/>
    </changeSet>

</databaseChangeLog>
