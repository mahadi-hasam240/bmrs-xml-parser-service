<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- BankAccountInfo Table -->
    <changeSet author="redDot" id="2" context="postgresql, oracle">
        <createSequence sequenceName="bank_account_info_id_seq" startValue="1" incrementBy="1"/>
        <createTable tableName="bank_account_info">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="bank_no" type="VARCHAR(50)"/>
            <column name="bank_name" type="VARCHAR(255)"/>
            <column name="card_expdate" type="VARCHAR(10)"/>
            <column name="bank_acctname" type="VARCHAR(255)"/>
            <column name="bank_accttype" type="VARCHAR(50)"/>
        </createTable>
   </changeSet>

</databaseChangeLog>
