<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="redDot" id="cust-charge-1">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="cust_charge"/>
            </not>
            <not>
                <sequenceExists sequenceName="cust_charge_id_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="cust_charge_id_seq" startValue="1" incrementBy="1"/>
        <createTable tableName="cust_charge">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="category" type="VARCHAR(255)"/>
            <!-- Add other columns from your CustCharge entity here if any -->
            <!-- Example: <column name="charge_type" type="VARCHAR(255)"/> -->
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="processed" type="BOOLEAN" defaultValueBoolean="false"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
