<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="redDot" id="prev-bill-1">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="prev_bill"/>
            </not>
            <not>
                <sequenceExists sequenceName="prev_bill_id_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="prev_bill_id_seq" startValue="1" incrementBy="1"/>
        <createTable tableName="prev_bill">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="prev_balance" type="DECIMAL(18,2)"/>
            <column name="balance_fwd" type="DECIMAL(18,2)"/>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="processed" type="BOOLEAN" defaultValueBoolean="false"/>
        </createTable>
        <!-- No foreign key here as AccountInfo is the owning side for this @OneToOne relationship -->
    </changeSet>

</databaseChangeLog>
