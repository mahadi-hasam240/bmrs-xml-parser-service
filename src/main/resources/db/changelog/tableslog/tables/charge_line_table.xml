<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="redDot" id="charge-line-1">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="charge_line"/>
            </not>
            <not>
                <sequenceExists sequenceName="charge_line_id_seq"/>
            </not>
        </preConditions>
        <createSequence sequenceName="charge_line_id_seq" startValue="1" incrementBy="1"/>
        <createTable tableName="charge_line">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="fee_category_id" type="BIGINT"/>
            <column name="chg_fee" type="DECIMAL(18,2)"/>
            <column name="description" type="VARCHAR(255)"/>
            <column name="category" type="VARCHAR(255)"/>
            <column name="sub_category" type="VARCHAR(255)"/>
            <column name="cycle_no" type="VARCHAR(50)"/>
            <column name="service_type" type="VARCHAR(255)"/>
            <column name="charge_code" type="VARCHAR(255)"/>
            <column name="item_id" type="VARCHAR(255)"/>
            <column name="rating_tax1" type="DECIMAL(18,2)"/>
            <column name="rating_tax2" type="DECIMAL(18,2)"/>
            <column name="rating_tax3" type="DECIMAL(18,2)"/>
            <column name="rating_tax4" type="DECIMAL(18,2)"/>
            <column name="disc1" type="DECIMAL(18,2)"/>
            <column name="disc2" type="DECIMAL(18,2)"/>
            <column name="disc3" type="DECIMAL(18,2)"/>
            <column name="start_date" type="TIMESTAMP"/>
            <column name="end_date" type="TIMESTAMP"/>
            <column name="currency" type="VARCHAR(50)"/>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="processed" type="BOOLEAN" defaultValueBoolean="false"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="charge_line"
                                 baseColumnNames="fee_category_id"
                                 referencedTableName="fee_category"
                                 referencedColumnNames="id"
                                 constraintName="fk_charge_line_fee_category"/>
    </changeSet>

</databaseChangeLog>
